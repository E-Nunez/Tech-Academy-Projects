<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Fill out your information to get an Insurance Quote</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("InsuranceQuote", "Home", FormMethod.Post))
            {
                <div class="row no-gutters">
                    <div class="form-group col-md-12">
                        <input name="FirstName" type="text" class="form-control col" placeholder="First Name" required />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="LastName" type="text" class="form-control col" placeholder="Last Name" required />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="EmailAddress" type="email" class="form-control col" placeholder="Email Address" required />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="DateOfBirth" type="date" class="form-control col" placeholder="Date Of Birth" required />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="CarYear" type="number" class="form-control col" placeholder="Car Year" required />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="CarMake" type="text" class="form-control col" placeholder="Car Make" required />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="CarModel" type="text" class="form-control col" placeholder="Car Model" required />
                    </div>
                    <div class="form-group col-md-12">
                        <select name="Dui" class="form-control col" required>
                            <option value="">Have you ever had a DUI?</option>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </select>
                    </div>
                    <div class="form-group col-md-12">
                        <input name="SpeedTicket" type="number" min="0" class="form-control col" placeholder="How many speeding tickets do you have?" required />
                    </div>
                    <div class="form-group col-md-12">
                        <select name="Coverage" class="form-control col" required>
                            <option value="">Would you like Full Coverage or Liability?</option>
                            <option value="Full Coverage">Full Coverage</option>
                            <option value="Liability">Liability</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-block btn-primary">Submit</button>
                </div>
            }
        </div>
    </div>
</div>